    <aside class="aside-lg bg-white b-l hide" id="aside">
      <div class="wrapper">
        <h4 class="m-t-none">Jogador</h4>
        <form>
          <div class="form-group" style="text-align: center">
            <a href="#" data-toggle="modal" data-target="#change-profile">
              <div id="profile-result">
                <img src="../images/avatar_default.jpg" alt="" class="thumb-lg img-circle">    
              </div>
            </a>
          </div>
          <div class="form-group">
            <label>BI</label>
            <input type="text" id="bi" placeholder="Numero de Documento" class="input-sm form-control">
          </div>
          <div class="form-group">
            <label>Nome</label>
            <input type="text" id="nome" placeholder="Nome do Jogador" class="input-sm form-control">
          </div>
          <div class="form-group">
            <label>Numero</label>
            <div id="MySpinner" class="spinner input-group" data-min="1" data-max="100">
              <input type="text" class="form-control spinner-input" value="1" maxlength="3">
              <div class="btn-group btn-group-vertical input-group-btn">
                <button type="button" class="btn btn-default spinner-up">
                  <i class="fa fa-chevron-up text-muted"></i>
                </button>
                <button type="button" class="btn btn-default spinner-down">
                  <i class="fa fa-chevron-down text-muted"></i>
                </button>
              </div>
            </div>
          </div>
          <div class="form-group">
            <label>Posicao</label>
              <select id="posicao" class="form-control m-b">
                <option value="GR">Guardaredes</option>
                <option value="DE">Defesa Esquerdo</option>
                <option value="DC">Defesa Central</option>
                <option value="DD">Defesa Direito</option>
                <option value="MDF">Medio Defensivo</option>
                <option value="MC">Medio Centro</option>
                <option value="MO">Medio Ofensivo</option>
                <option value="MD">Medio Direito</option>
                <option value="ME">Medio Esquerdo</option>
                <option value="AC">Avancado Centro</option>
                <option value="AE">Avancado Esquerdo</option>
                <option value="AD">Avancado Direito</option>
                <option value="SA">Segundo Avancado</option>
              </select>
          </div>
          <div class="form-group">
            <label>Reforço</label>
              <select id="reforco" class="form-control m-b">
                <option value="Local">Local</option>
                <option value="Reforco">Reforço</option>
              </select>
          </div>
          <input type="hidden" id="idEquipe" value="{{ id }}">
          <div class="m-t-lg"><button id="btnAdicionar" class="btn btn-sm btn-default">Adicionar</button></div>
        </form>
      </div>

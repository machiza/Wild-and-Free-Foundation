<section class="vbox">
  <section class="scrollable padder">
    <ul class="breadcrumb no-border no-radius b-b b-light pull-in">
      <li><a href="/admin"><i class="fa fa-home"></i> Home</a></li>
      <li><a href="#">Recursos Humanos</a></li>
      <li><a class="active">Presencas</a></li>
    </ul>

    <section class="scrollable wrapper">
      <div class="row">
        <div class="col-lg-12">
          <section class="panel panel-default">
            <div class="panel-body">
              <form>
              <div class="clearfix text-center m-t">
                <div class="inline">
                  <a href="#" data-toggle="modal" data-target="#change-profile">
                    <div id="profile-result">
                      <img src="../images/avatar_default.jpg" alt="" class="thumb-lg img-circle">    
                    </div>
                  </a>
                  <div class="h4 m-t m-b-xs"></div>
                  {{!-- <small class="text-muted m-b">Funcionario</small> --}}
                </div> 
                                  
              </div>
              <div class="clearfix text-center m-t">
                <form data-validate="parsley">
                  <div class="row">
                    <div class="col-sm-6 col-sm-offset-3">
                      <div class="form-group">
                        {{!-- <label>Utilizador</label> --}}
                        <input type="text" class="form-control" data-required="true" id="utilizador" placeholder="Nome do utilizador">                        
                      </div>
                      <div class="form-group">
                        {{!-- <label>Email</label> --}}
                        <input type="text" id="email" class="form-control" data-type="email" data-required="true" placeholder="Email">                        
                      </div>
                      <div class="form-group pull-in clearfix">
                        <div class="col-sm-6">
                          {{!-- <label>Digite password</label> --}}
                          <input type="password" class="form-control" data-required="true" id="pwd" placeholder="password">   
                        </div>
                        <div class="col-sm-6">
                          {{!-- <label>Confirme password</label> --}}
                          <input type="password" class="form-control" data-equalto="#pwd" data-required="true" placeholder="Confirme password">      
                        </div>   
                      </div>
                      <div class="form-group">
                        {{!-- <label>Telemovel</label> --}}
                        <input type="text" class="form-control" data-type="phone" id="telemovel" placeholder="Telemovel" data-required="true">
                      </div>
                      <input type="hidden" id="photo">
                    </div>
                  </div>
                </form>
              </div>
               
            </div>
            <footer class="panel-footer bg-default text-center">
              <button id="btnFeito" class="btn btn-default btn-s-xs">Feito</button>
              <button id="btnSalvar" class="btn btn-success btn-s-xs">Salvar</button>
            </footer>
            </form>
          </section>
        </div>
        
      </div>
    </section>

  </section>
</section>

